<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.DueRemember" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/blue_primary</item>
        <item name="colorSecondaryVariant">@color/blue_variant</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background color -->
        <item name="android:colorBackground">@color/off_white</item>
        <item name="colorOnBackground">@color/grey_dark</item>

        <!-- Surface color -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/grey_dark</item>

        <!-- Text color -->
        <item name="android:textColor">@color/grey_medium</item>

        <!-- EditText colors -->
        <item name="android:textColorHint">@color/grey_medium</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/grey_medium</item>

        <!-- Menu and Action Bar colors -->
        <item name="android:statusBarColor">@color/blue_primary</item>
        <item name="android:navigationBarColor">@color/blue_variant</item>

        <!-- Action Bar Style -->
        <item name="actionBarStyle">@style/DueRememberActionBar</item>
        <item name="android:actionBarStyle">@style/DueRememberActionBar</item>
    </style>

    <style name="DueRememberActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/blue_primary</item>
        <item name="titleTextStyle">@style/DueRememberActionBarTitleText</item>
    </style>

    <style name="DueRememberActionBarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey_medium</item>
    </style>
</resources>
